#!/bin/bash

VERSION=v0.19.0

set -e

help() {
  echo "Usage:"
  echo "  zmicro package install lazydocker <args...>"
  echo ""
}

install() {
  # prepare vars
  local name="lazydocker"
  # get system os/arch
  local arch="$(os::arch)"
  local kernel="$(os::kernel)"
  # usr_bin_dir
  local usr_bin_dir=$(os::usr_bin_dir)
  local tmp_dir="/tmp/$name"
  # files
  local tmp_file="$name.tar.gz"
  local bin_file="$name"

  if [ "$arch" = "amd64" ]; then
    arch="x86_64"
  elif [ "$arch" = "arm64" ]; then
    arch="arm64"
  else
    log::error "unknown architecture: $arch"
    exit 1
  fi

  # prepare context
  mkdir -p $tmp_dir
  cd $tmp_dir

  # reference: https://github.com/jesseduffield/lazydocker/releases
  # example:
  #   https://github.com/jesseduffield/lazydocker/releases/download/v0.19.0/lazydocker_0.19.0_Darwin_arm64.tar.gz
  #   https://github.com/jesseduffield/lazydocker/releases/download/v0.19.0/lazydocker_0.19.0_Darwin_x86_64.tar.gz
  # generate url
  local url="https://github.com/jesseduffield/lazydocker/releases/download/$VERSION/${name}_${VERSION#v}_${kernel}_${arch}.tar.gz"
  log::debug "[package][$name][$kernel][$arch] url: $url"

  # download
  os::curl --progress-bar -fSL $url -o $tmp_file

  # extract
  tar -zxvf $tmp_file >>/dev/null 2>&1

  # install
  sudo mv $bin_file $usr_bin_dir

  # clean
  rm -rf $tmp_dir
}

core() {
  if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    help
    exit 0
  fi

  install
  if [ $? -eq 0 ]; then
    log::success "install lazydocker success."
    exit 0
  else
    log::error "install lazydocker failed."
    exit 1
  fi
}

run() {
  core $@
}

run $@
