#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro mtg <args ...>"
  echo ""

  mtg --help
}

version() {
  mtg --version
}

core() {
  # context directory
  local context="$ZMICRO_PACKAGES_DATA_PATH/mtg"
  if [ ! -d "$context" ]; then
    mkdir -p $context
  fi
  cd $context
  # context directory

  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    mtg "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
